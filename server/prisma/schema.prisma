datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  listings  Listing[]
  password  String
  roles     Json
  trips     Trip[]
  updatedAt DateTime   @updatedAt
  username  String     @unique
  wishlists Wishlist[]
}

model Listing {
  createdAt          DateTime  @default(now())
  description        String
  id                 String    @id @default(cuid())
  listingCreatedBy   User      @relation(fields: [listingCreatedById], references: [id])
  listingCreatedById String
  location           Json
  locationType       String
  mapData            Json
  photos             Json
  placeAmenities     Json
  placeSpace         Json
  placeType          String
  price              Float
  title              String
  trip               Trip?     @relation(fields: [tripId], references: [id])
  tripId             String?
  updatedAt          DateTime  @updatedAt
  wishlist           Wishlist? @relation(fields: [wishlistId], references: [id])
  wishlistId         String?
}

model Wishlist {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  listings  Listing[]
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  userId    String
}

model Trip {
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  info      Json
  listings  Listing[]
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  userId    String
}
